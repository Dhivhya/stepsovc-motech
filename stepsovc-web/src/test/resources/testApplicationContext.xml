<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <import resource="classpath:applicationContext-Core.xml"/>

    <context:annotation-config/>
    <context:spring-configured/>
    <context:component-scan base-package="org.wv.stepsovc.web"/>

    <bean id="stepsovcDbConnector" class="org.ektorp.impl.StdCouchDbConnector">
        <constructor-arg value="stepsovc-integration-test"/>
        <constructor-arg ref="couchDbInstance"/>
    </bean>

    <bean factory-method="create" depends-on="" class="org.wv.stepsovc.web.MockFactory">
        <constructor-arg value="org.wv.stepsovc.web.MockSmsService"/>
    </bean>
    <bean factory-method="create" depends-on="" class="org.wv.stepsovc.web.MockFactory">
        <constructor-arg value="org.motechproject.sms.api.service.SmsAuditService"/>
    </bean>

</beans>